<configs>

<append xpath="/buffs">

<buff name="pve_zone" name_key="PvE_Zone" description_key="You are inside a PvE area" tooltip_key="PvE_Zone" icon="ui_game_symbol_twitch_no_ranged" icon_color="0,102,153">
	<stack_type value="replace"/>
	<effect_group>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_ally_zone"/>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_stranger_zone"/>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_zone"/>
		<triggered_effect trigger="onSelfDied" target="self" action="RemoveBuff" buff="pve_zone"/>
	</effect_group>
</buff>

<buff name="pvp_ally_zone" name_key="PvP_Ally_Zone" description_key="You are inside a area with active damage for allies" tooltip_key="PvP_Ally_Zone" icon="ui_game_symbol_twitch_no_ranged" icon_color="204,204,0">
	<stack_type value="replace"/>
	<effect_group>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pve_zone"/>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_stranger_zone"/>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_zone"/>
		<triggered_effect trigger="onSelfDied" target="self" action="RemoveBuff" buff="pvp_ally_zone"/>
		<triggered_effect trigger="onSelfPrimaryActionRayHit" target="other" action="AddBuff" buff="pvp_ally_damage">
			<requirement name="EntityTagCompare" target_tags="ally"/>
		</triggered_effect>
		<triggered_effect trigger="onSelfSecondaryActionRayHit" target="other" action="AddBuff" buff="pvp_ally_damage">
			<requirement name="EntityTagCompare" target_tags="ally"/>
		</triggered_effect>
	</effect_group>
</buff>

<buff name="pvp_stranger_zone" name_key="PvP_Stranger_Zone" description_key="You are inside a area with active damage for strangers" tooltip_key="PvP_Stranger_Zone" icon="ui_game_symbol_twitch_no_ranged" icon_color="255,153,0">
	<stack_type value="replace"/>
	<effect_group>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pve_zone"/>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_ally_zone"/>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_zone"/>
		<triggered_effect trigger="onSelfDied" target="self" action="RemoveBuff" buff="pvp_stranger_zone"/>
		<triggered_effect trigger="onSelfPrimaryActionRayHit" target="other" action="AddBuff" buff="pvp_stranger_damage">
			<requirement name="EntityTagCompare" tags="player"/>
		</triggered_effect>
		<triggered_effect trigger="onSelfSecondaryActionRayHit" target="other" action="AddBuff" buff="pvp_stranger_damage">
			<requirement name="EntityTagCompare" tags="player"/>
		</triggered_effect>
	</effect_group>
</buff>

<buff name="pvp_zone" name_key="PvP_Zone" description_key="You are inside a area with active damage for everyone" tooltip_key="PvP_Zone" icon="ui_game_symbol_twitch_no_ranged" icon_color="204,0,0">
	<stack_type value="replace"/>
	<effect_group>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pve_zone"/>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_ally_zone"/>
		<triggered_effect trigger="onSelfBuffStart" target="self" action="RemoveBuff" buff="pvp_stranger_zone"/>
		<triggered_effect trigger="onSelfDied" target="self" action="RemoveBuff" buff="pvp_zone"/>
		<triggered_effect trigger="onSelfPrimaryActionRayHit" target="other" action="AddBuff" buff="pvp_damage">
			<requirement name="EntityTagCompare" tags="player"/>
		</triggered_effect>
		<triggered_effect trigger="onSelfSecondaryActionRayHit" target="other" action="AddBuff" buff="pvp_damage">
			<requirement name="EntityTagCompare" tags="player"/>
		</triggered_effect>
	</effect_group>
</buff>

<buff name="pvp_ally_damage" hidden="true">
	<stack_type value="replace"/>
	<duration value="1"/>
	<effect_group>
      <requirements>
			<requirement name="!HasBuff" buff="pvp_ally_zone"/>
	    </requirements>
		<passive_effect name="HealthLoss" operation="base_set" value="0"/>
		<passive_effect name="HealthLoss" operation="perc_set" value="0"/>
		<passive_effect name="HealthLoss" operation="perc_add" value="-1"/>
		<passive_effect name="ElementalDamageResist" operation="base_add" value="200"/>
		<passive_effect name="PhysicalDamageResist" operation="base_add" value="200"/>
		<passive_effect name="ExplosionIncomingDamage" operation="base_set" value="0" tags="explosive"/>
		<passive_effect name="ExplosionIncomingDamage" operation="perc_set" value="0" tags="explosive"/>
		<passive_effect name="ExplosionIncomingDamage" operation="perc_add" value="-1" tags="explosive"/>
		<triggered_effect trigger="onSelfDied" target="self" action="RemoveBuff" buff="pvp_ally_damage"/>
	</effect_group>
</buff>

<buff name="pvp_stranger_damage" hidden="true">
	<stack_type value="replace"/>
	<duration value="1"/>
	<effect_group>
      <requirements>
			<requirement name="!HasBuff" buff="pvp_ally_zone"/>
	    </requirements>
		<passive_effect name="HealthLoss" operation="base_set" value="0"/>
		<passive_effect name="HealthLoss" operation="perc_set" value="0"/>
		<passive_effect name="HealthLoss" operation="perc_add" value="-1"/>
		<passive_effect name="ElementalDamageResist" operation="base_add" value="200"/>
		<passive_effect name="PhysicalDamageResist" operation="base_add" value="200"/>
		<passive_effect name="ExplosionIncomingDamage" operation="base_set" value="0" tags="explosive"/>
		<passive_effect name="ExplosionIncomingDamage" operation="perc_set" value="0" tags="explosive"/>
		<passive_effect name="ExplosionIncomingDamage" operation="perc_add" value="-1" tags="explosive"/>
		<triggered_effect trigger="onSelfDied" target="self" action="RemoveBuff" buff="pvp_stranger_damage"/>
	</effect_group>
</buff>

<buff name="pvp_damage" hidden="true">
	<stack_type value="replace"/>
	<duration value="1"/>
	<effect_group>
      <requirements>
			<requirement name="!HasBuff" buff="pvp_ally_zone"/>
	    </requirements>
		<passive_effect name="HealthLoss" operation="base_set" value="0"/>
		<passive_effect name="HealthLoss" operation="perc_set" value="0"/>
		<passive_effect name="HealthLoss" operation="perc_add" value="-1"/>
		<passive_effect name="ElementalDamageResist" operation="base_add" value="200"/>
		<passive_effect name="PhysicalDamageResist" operation="base_add" value="200"/>
		<passive_effect name="ExplosionIncomingDamage" operation="base_set" value="0" tags="explosive"/>
		<passive_effect name="ExplosionIncomingDamage" operation="perc_set" value="0" tags="explosive"/>
		<passive_effect name="ExplosionIncomingDamage" operation="perc_add" value="-1" tags="explosive"/>
		<triggered_effect trigger="onSelfDied" target="self" action="RemoveBuff" buff="pvp_damage"/>
	</effect_group>
</buff>

<buff name="region_reset" name_key="Region_reset" description_key="The region you are in will reset. Building here is NOT recommended" icon="ui_game_symbol_brick" icon_color="255, 153, 51">
	<stack_type value="replace"/>
	<effect_group>
		<triggered_effect trigger="onSelfDied" target="self" action="RemoveBuff" buff="region_reset"/>
	</effect_group>
</buff>

</append>

</configs>
